<%const nombreUsuario = 'Jenny';%>
<%- include('../componentes/menu/menu',{nombre: nombreUsuario})%>

<style>
    table ,th, td, tr{
        border: solid blue 1px ;
    }
</style>


<a href="/api/traguito/crear">
    <button>Crear</button>
</a>


<table style="width: 100%">
    <tr>
        <th>Nombre</th>
        <th>Grados</th>
        <th>Caduca</th>
        <th>Precio</th>
        <th>Tipo</th>
        <th>Acciones</th>
    </tr>
    <% arreglosTragos.forEach((trago)=>{ %>
    <tr>
        <td> <%=trago.nombre%> </td>
        <td> <%=trago.gradosAlcohol%> </td>
        <td> <%=trago.fechaCaducidad%> </td>
        <td> <%=trago.precio%> </td>
        <td> <%=trago.tipo%> </td>
        <td>
            <button>Editar</button>

            <button>Eliminar</button>
        </td>
    </tr>
    <% })%>
</table>

<%- include('../componentes/footer/footer')%>