<%-include('../componentes/menu/menu')%>

<% const existeMensaje =mensaje %>
<% if(existeMensaje){%>
    <p>ERROR EN FORMULARIO!! <%=mensaje%></p>
<%}%>

<style>
    .centro{
        text-align: center;
    }

    .tamanio{
        width: 100%;
    }
</style>

<h1 class="centro">Formulario de Creación</h1>
<p>Crea un nuevo trago</p>
<form action="/api/traguito/crear"
      method="post"
>

    <label for="nombreId">Nombre</label>
    <input id="nombreId"
           name="nombre"
           type="text"
           value="<%=tragoAux.nombre%>"
    >
    <br>

    <label for="tipoId">Tipo de Trago</label>
    <select name="tipo" id="tipoId">
        <option value="Ron">Roncito</option>
        <option value="Vodka">Vodkita</option>
        <option value="Tequila"selected>Tequilita</option>
        <option value="Whiskey">Whiskicito</option>
        <option value="Puntas Cerveza">Puntitas</option>
        <option value="Vodka">Vodkita</option>
    </select>
    <br>

    <label for="gradosId">Grados de Alcohol</label>
    <input id="gradosId"
           name="gradosAlcohol"
           type="number"
           min="0"
           max="100"
           step="0.1"
           value="<%=tragoAux.gradosAlcohol%>"
    >
    <br>

    <label for="fechaCaducidadId">Fecha caducidad</label>
    <input id="fechaCaducidadId"
           name="fechaCaducidad"
           type="date"
           value="<%=tragoAux.fechaCaducidad%>"

    >
    <br>

    <label for="precioId">Precio</label>
    <input id="precioId"
           name="precio"
           type="number"
           min="0"
           step="0.01"
           value="<%=tragoAux.precio%>"
    >
    <br>

<!--    <button type="reset">reset</button>-->
<!--    <button type="submit">submit</button>-->

    <a href="/api/traguito/lista">
        <button type="button">Cancelar</button>
    </a>

    <% if(!editar){ %>
        <button>Enviar información</button>
    <% }else{ %>
        <button>Realizar cambios</button>
    <% } %>

</form>

<%-include('../componentes/footer/footer')%>